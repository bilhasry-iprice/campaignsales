#courtesies-banner.width-100.fixed.bottom-x0.relative-l
	.flex.width-100.wrapper
		a.flex-1.flex-none-l.text-align-center(href="https://iprice.my/")
			.flex.flex-column.flex-row-l.align-items-center
				i.icon.icon-gray-product.margin-all-x0
				span Products
		a.flex-1.flex-none-l.text-align-center(href=baseUrl+'/coupons/')
			.flex.flex-column.flex-row-l.align-items-center
				i.icon.icon-gray-coupon.margin-all-x0
				span Coupons
		a.flex-1.flex-none-l.text-align-center(href=baseUrl+'/trends/')
			.flex.flex-column.flex-row-l.align-items-center
				i.icon.icon-gray-trend.margin-all-x0
				span Trends
header.bg-banner-gradiant
	#banner.padding-horizontal-x5
		.wrapper.flex.align-items-center.height-100
			a.logo.h2(href=homeUrl)
			span.motto.none.block-l.white #{topWording} 
			form.relative.flex.flex-1.flex-column.align-items-end(action=baseUrl+'/search/', method="GET", target="_top", novalidate)
				input#term.width-100.height-x3.height-x4-l(type="text", name="term", role="search", autocomplete="off", placeholder="Search for products, coupons or brands...", required)
				button.absolute.bg-white.height-100.top-x0(type="submit")
					i.icon.icon-search-blue 
			#searchbox-overlay.hidden
				i.block.none-l.icon.icon-burger.cursor-pointer.prod(role="button", tabindex="0", on="tap:sidebar.toggle")