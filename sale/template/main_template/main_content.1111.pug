#big-slider.width-100
	amp-carousel(width="1280", height="360", layout="responsive", type="slides", controls, loop, autoplay, delay="3000")
		amp-img(srcset= main_banner_mobile + " 640w, " + main_banner_desktop + " 1000w", width="1369", height="457", layout="responsive")
#brand-top
	.top-selling-products.content-block
		amp-list(width="auto", height="360", layout="fixed-height", src="https://bilhasry-iprice.github.io/sale/data/hk/data_coupons.json")
			template(type="amp-mustache")
				amp-carousel(height="360", width="auto",  layout="fixed-height", autoplay, delay="2000", type="slides")
					|{{#values}}{{#img}}<a href="{{url}}" class="top-product-list"><amp-img src="{{img}}" alt="{{title}}" width="200" height="100" layout="responsive"></amp-img><span>{{intro_text}}</span></a>{{/img}}{{/values}}
