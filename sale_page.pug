      include sale/template/main_template/css/bootstrap.min.css
      include sale/template/main_template/css/iprice.min.css
      include sale/template/main_template/css/main.sale.css
  body
    include sale/template/main_template/header_iprice.pug
    #main-content.width-100
      block content
      h1= h1_heading
      p= seo_content
      h2= h2_heading
      amp-list.row(width="auto", height="250", layout="fixed-height", src=data_source)
        template(type="amp-mustache")
          .image-entry.col-md-4
            a(href="{{url}}")
              amp-img(src="{{img}}", alt="{{title}}", width="360", height="260", layout="responsive")
            span {{title}}
        div.list-overflow(overflow) 
          button Load More
    block footer
    include sale/template/main_template/footer_iprice.pug
    