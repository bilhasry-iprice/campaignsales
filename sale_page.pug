  head
    meta(charset="utf-8")
    script(async, src="https://cdn.ampproject.org/v0.js")
    block header
    each item in plugins
        script(async, custom-element=item.element, src=item.src)
    if mustache
        script(async, custom-template="amp-mustache", src="https://cdn.ampproject.org/v0/amp-mustache-0.1.js")
    title #{pageTitle}
    link(rel="canonical", href="https://iprice.hk/sale/")
    meta(name="viewport", content="width=device-width,minimum-scale=1")
    // Open Graph Meta for Facebook
    meta(property="og:url", content=og_url)
    meta(property="og:type", content="website")
    meta(property="og:title", content=og_title)
    meta(property="og:description", content=og_description)
    meta(property="og:image", content=og_image)
    block context
    script(type="application/ld+json").
      {
        "@context": "http://schema.org",
        "@type": "NewsArticle",
        "headline": "#{headline}",
        "datePublished": "#{published_date}",
        "image": [
          "#{image}"
        ]
      }
