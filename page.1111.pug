doctype
html(amp, lang="en")
  head
    block header
    meta(charset="utf-8")
    script(async, src="https://cdn.ampproject.org/v0.js")
    each item in plugins
        script(async, custom-element=item.element, src=item.src)
    if mustache
        script(async, custom-template="amp-mustache", src="https://cdn.ampproject.org/v0/amp-mustache-0.1.js")
    title #{pageTitle}
    link(rel="canonical", href=baseUrl+'/sale/1111/')
    link(rel="shortcut icon", href="https://d1vfs9f7h1rfk4.cloudfront.net/favicon.ico?v=1")
    link(href="https://fonts.googleapis.com/css?family=Noto+Sans:400,700", rel="stylesheet")
    meta(name="viewport", content="width=device-width,minimum-scale=1,initial-scale=1")
    // Open Graph Meta for Facebook
    meta(property="og:url", content=baseUrl+'/sale/1111/')
    meta(property="og:type", content="website")
    meta(property="og:title", content=pageTitle)
    meta(property="og:description", content=description)
    meta(property="og:image", content=og_image)
    script(type="application/ld+json").
      {
        "@context": "http://schema.org",
        "@type": "NewsArticle",
        "headline": "#{pageTitle}",
        "description" : "#{description}"
        "datePublished": "#{published_date}",
        "image": [
          "#{image}"
        ]
      }
    |
    |<style amp-boilerplate>body{-webkit-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-moz-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-ms-animation:-amp-start 8s steps(1,end) 0s 1 normal both;animation:-amp-start 8s steps(1,end) 0s 1 normal both}@-webkit-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-moz-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-ms-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-o-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}</style><noscript><style amp-boilerplate>body{-webkit-animation:none;-moz-animation:none;-ms-animation:none;animation:none}</style></noscript>
    style(amp-custom)
        include sale/template/main_template/css/main.campaign.css
        include sale/template/main_template/css/iprice.min.css
  body
    include sale/template/main_template/header_iprice.pug
    #main-content.width-100
        block content
        if (published_date < today)
            include sale/template/main_template/pre_campaign.1111.pug
            include sale/template/main_template/seo_content.1111.pug
        else if (published_date == today)
            include sale/template/main_template/main_content.1111.pug
            include sale/template/main_template/seo_content.1111.pug
    block footer
    include sale/template/main_template/footer_iprice.pug